# Cloud Explorer Backend Environment Configuration Template
# Copy this file to .env and customize for your environment
# For development, you can also copy .env.development
# For production, use .env.production as a starting point

# =============================================================================
# QUICK SETUP (Minimal configuration to get started)
# =============================================================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Security Configuration
HTTPS_ENABLED=false
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS=100

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=default

# Frontend Integration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security (CHANGE IN PRODUCTION)
SECRET_KEY=your-secret-key-here-change-in-production

# SSL Configuration (for HTTPS development)
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# =============================================================================
# FULL CONFIGURATION OPTIONS
# =============================================================================
# For complete configuration options, see:
# - .env.development (development settings)
# - .env.production (production settings)
#
# You can copy either file to .env and customize as needed.
# =============================================================================

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Security
CORS_ORIGINS=["http://localhost:3000"]
API_KEY_NAME=X-API-Key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=JSON

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60
