# Cloud Explorer Backend - Development Environment Configuration
# Copy this file to .env for local development

# =============================================================================
# CLOUD EXPLORER - DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# Application Settings
PROJECT_NAME=Cloud Explorer API
DESCRIPTION=AWS resource management and monitoring API
VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=1

# Security Configuration
HTTPS_ENABLED=false
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_CONFIG=10
API_RATE_LIMIT_HEALTH=60
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' cdn.jsdelivr.net; img-src 'self' data: fastapi.tiangolo.com; font-src 'self' cdn.jsdelivr.net; connect-src 'self'

# SSL Configuration (for HTTPS development testing)
SSL_CERT_PATH=certs/cert.pem
SSL_KEY_PATH=certs/key.pem

# API Configuration
API_V1_STR="/api/v1"

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS="localhost,127.0.0.1,0.0.0.0,testserver"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080"

# Secret Key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY="your-super-secret-key-here-change-in-production"

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM="HS256"

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Default Settings
AWS_DEFAULT_REGION="us-east-1"
AWS_PROFILE="default"

# AWS Service Limits (requests per minute)
AWS_EC2_RATE_LIMIT=100
AWS_RDS_RATE_LIMIT=50
AWS_VPC_RATE_LIMIT=100
AWS_S3_RATE_LIMIT=200

# AWS Retry Configuration
AWS_MAX_RETRIES=3
AWS_RETRY_DELAY=1

# =============================================================================
# DATABASE & CACHING
# =============================================================================

# Redis Configuration (for caching AWS responses)
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=300

# Session Storage
SESSION_COOKIE_NAME="cloud_explorer_session"
SESSION_MAX_AGE_SECONDS=86400

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# File Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH="logs/cloud_explorer.log"
LOG_FILE_MAX_SIZE_MB=10
LOG_FILE_BACKUP_COUNT=5

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Per-endpoint Rate Limits
HEALTH_CHECK_RATE_LIMIT=1000
ACCOUNTS_RATE_LIMIT=10
RESOURCES_RATE_LIMIT=50

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_AWS_ENABLED=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PREFIX="cloud_explorer"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Features
ENABLE_OPENAPI_DOCS=true
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false

# Mock Data (for development/testing)
USE_MOCK_AWS_DATA=false
MOCK_DELAY_SECONDS=0.5

# Auto-reload Configuration
WATCH_FILES=true
RELOAD_EXCLUDES="*.pyc,*.pyo,*.log"

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Service Feature Toggles
ENABLE_EC2_SERVICE=true
ENABLE_RDS_SERVICE=true
ENABLE_VPC_SERVICE=true
ENABLE_S3_SERVICE=true
ENABLE_LAMBDA_SERVICE=true
ENABLE_ELB_SERVICE=true

# Advanced Features
ENABLE_COST_ESTIMATION=false
ENABLE_COMPLIANCE_CHECKS=false
ENABLE_RESOURCE_RECOMMENDATIONS=false
