# Cloud Explorer Backend - Production Environment Configuration
# This file contains production-ready defaults
# Override specific values using environment variables

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Project Information
PROJECT_NAME="Cloud Explorer API"
VERSION="0.1.0"
DESCRIPTION="AWS resource management and monitoring API"

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
DEBUG=false
RELOAD=false

# API Configuration
API_V1_STR="/api/v1"

# =============================================================================
# SECURITY SETTINGS (OVERRIDE THESE IN PRODUCTION)
# =============================================================================

# Allowed Hosts - MUST be set for production
ALLOWED_HOSTS="your-production-domain.com,api.your-domain.com"

# CORS Origins - MUST be set for production
CORS_ORIGINS="https://your-frontend-domain.com,https://app.your-domain.com"

# Secret Key - MUST be generated and set securely in production
# Generate with: openssl rand -hex 32
SECRET_KEY="CHANGE-THIS-TO-A-SECURE-RANDOM-KEY-IN-PRODUCTION"

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=1
ALGORITHM="HS256"

# =============================================================================
# AWS CONFIGURATION
# =============================================================================

# AWS Default Settings
AWS_DEFAULT_REGION="us-east-1"
AWS_PROFILE="production"

# AWS Service Limits (conservative for production)
AWS_EC2_RATE_LIMIT=50
AWS_RDS_RATE_LIMIT=25
AWS_VPC_RATE_LIMIT=50
AWS_S3_RATE_LIMIT=100

# AWS Retry Configuration
AWS_MAX_RETRIES=5
AWS_RETRY_DELAY=2

# =============================================================================
# DATABASE & CACHING
# =============================================================================

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
CACHE_TTL_SECONDS=600

# Session Storage
SESSION_COOKIE_NAME="cloud_explorer_session"
SESSION_MAX_AGE_SECONDS=43200

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level
LOG_LEVEL="WARNING"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# File Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH="/var/log/cloud_explorer/app.log"
LOG_FILE_MAX_SIZE_MB=50
LOG_FILE_BACKUP_COUNT=10

# =============================================================================
# RATE LIMITING
# =============================================================================

# API Rate Limiting (stricter for production)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Per-endpoint Rate Limits
HEALTH_CHECK_RATE_LIMIT=200
ACCOUNTS_RATE_LIMIT=5
RESOURCES_RATE_LIMIT=20

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=3
HEALTH_CHECK_AWS_ENABLED=true

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PREFIX="cloud_explorer_prod"

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Features
ENABLE_OPENAPI_DOCS=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false

# Mock Data (disabled in production)
USE_MOCK_AWS_DATA=false
MOCK_DELAY_SECONDS=0

# Auto-reload Configuration (disabled in production)
WATCH_FILES=false
RELOAD_EXCLUDES=""

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Service Feature Toggles
ENABLE_EC2_SERVICE=true
ENABLE_RDS_SERVICE=true
ENABLE_VPC_SERVICE=true
ENABLE_S3_SERVICE=true
ENABLE_LAMBDA_SERVICE=true
ENABLE_ELB_SERVICE=true

# Advanced Features (disabled by default)
ENABLE_COST_ESTIMATION=false
ENABLE_COMPLIANCE_CHECKS=false
ENABLE_RESOURCE_RECOMMENDATIONS=false

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"

# Other Security Headers
X_FRAME_OPTIONS="DENY"
X_CONTENT_TYPE_OPTIONS="nosniff"
REFERRER_POLICY="strict-origin-when-cross-origin"
